<h3>スケジュール新規登録</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
 <table>
    <tr>
     <th><%= f.label :title ,"タイトル" %></th>
     <td><%= f.text_field :title %></td>
    </tr>

    <tr>
     <th><%= f.label :start_at ,"開始日" %></th>
     <td><%= f.date_field :start_at %></td>
    </tr>

    <tr>
     <th><%= f.label :end_at ,"終了日" %></th>
     <td><%= f.date_field :end_at %></td>
    </tr>

    <tr>
     <th><%= f.label :is_all_day ,"終日の場合はチェック" %></th>
     <td><%= f.check_box :is_all_day ,checked:false %></td>
    </tr>


    <tr>
     <th><%= f.label :memo ,"スケジュールメモ" %></th>
     <td><%= f.text_area :memo %></td>
    </tr>
 </table>

 <div class = "buttons">
   <p><%= link_to "キャンセル", :posts %></p>
   <p class = "submit" ><%= f.submit "保存" %></p>
</div>
<% end %>