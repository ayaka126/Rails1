<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<button class ="new"><%= link_to "新規追加", :new_post %></button>
<div class = "today">本日の日付：<%= Date.today.strftime("%Y/%m/%d") %></div>
<div class = "sum">予定合計：<%= Post.count %>件</div>

<table>
<thead>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>更新日時</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
</thead>

<tbody>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.start_at.strftime("%Y/%m/%d") %></td>
    <td><%= post.end_at.strftime("%Y/%m/%d") %></td>
    <td><% if post.is_all_day == true %>
        ○
        <% else %>

        <% end %>
    </td>
    <td><%= post.updated_at.to_s(:datetime_jp) %></td>
    <td>
    <%= link_to "詳細", post %>
    </td>
    <td>
    <%= link_to "編集", [:edit, post] %>
    </td>
    <td>
    <%= link_to "削除", post,method: :delete,data:{confirm:"予定を削除しますか？"} %>
    </td>
  </tr>
<% end %>
</tbody>
</table>